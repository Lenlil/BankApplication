@model AddTransactionViewModel

<section class="generic-banner relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="generic-banner-content">
                    <!-- Start service Area -->

                    <div class="row justify-content-center align-items-center flex-column pb-30">
                        <h1 class="text-white">Create Transaction</h1>
                        <p class="text-white">Fill in the fields below to create a new transaction.</p>
                    </div>                 

                </div>
            </div>
        </div>
    </div>
</section>

<div class="main-wrapper">
    <!-- Start service Area -->
    <section class="service-area pt-100" id="feature">
        <div class="container">
            
            <div class="row justify-content-center align-items-start">                
                <form asp-action="CreateTransaction" asp-controller="Transaction" method="post">

                    <div class="row">
                        <div class="col-lg-6 cols">
                            <label for="FromAccountId">From Account</label>
                            <input class="form-control" id="FromAccountId" asp-for="@Model.FromAccountId" type="number" placeholder="From Account ID" />
                            <span style="color: red" asp-validation-for="@Model.FromAccountId"></span>
                        </div>

                        <div class="col-lg-6 cols">
                            <label for="Date">Date</label>
                            <input class="form-control" id="Date" asp-for="@Model.Date" type="date" placeholder="Date" />
                            <span style="color:red" asp-validation-for="@Model.Date"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 cols">
                            <label for="Type">Select Type</label>
                            <select class="form-control" id="Type" asp-for="@Model.Type" asp-items="@(new SelectList(@Model.Types, "Value", "Text" ))">
                                @*<option value="">Select Type</option>*@
                            </select>
                            <span style="color:red" asp-validation-for="@Model.Type"></span>
                        </div>

                        <div class="col-lg-6 cols">
                            <label for="Operation">Select Operation</label>
                            <select class="form-control" id="Operation" asp-for="@Model.Operation" asp-items="@(new SelectList(@Model.Operations, "Value", "Text" ))">
                                <option value="">Select Operation</option>
                            </select>
                            <span style="color:red" asp-validation-for="@Model.Operation"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 cols">
                            <label for="Amount">Amount</label>
                            <input class="form-control" id="Amount" asp-for="@Model.Amount" placeholder="Amount" />
                            <span style="color:red" asp-validation-for="@Model.Amount"></span>
                        </div>

                        <div class="col-lg-12 cols">
                            <label for="Symbol">Write a description</label>
                            <input asp-for="@Model.Symbol" type="text" class="form-control" id="Symbol" placeholder="Description">
                            <span style="color:red" asp-validation-for="@Model.Symbol"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 cols">
                            <label for="Bank">To Bank</label>
                            <input asp-for="@Model.Bank" type="text" class="form-control" id="Bank" placeholder="Bank name">
                            <span style="color:red" asp-validation-for="@Model.Bank"></span>
                        </div>

                        <div class="col-lg-6 cols">
                            <label for="ToAccount">To Account</label>
                            <input asp-for="@Model.ToAccount" type="text" class="form-control" id="ToAccount" placeholder="Account name">
                            <span style="color:red" asp-validation-for="@Model.ToAccount"></span>
                        </div>
                    </div>
                    <br />

                    <div class="row justify-content-center align-items-start">
                        <button type="submit" asp-controller="Transaction" asp-action="CreateTransaction" class="primary-btn default circle text-uppercase mb-30">Create Transaction</button>
                    </div>

                </form>
            </div>

                @Html.Partial("_TransactionError", Model.ErrorMessageViewModel)

        </div>
    </section>
</div>
