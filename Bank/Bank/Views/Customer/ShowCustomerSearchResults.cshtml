@model SearchResultsViewModel

<section class="generic-banner relative">
    <div class="container">
        <div class="main-wrapper">
            <!-- Start service Area -->
            <section class="service-area pt-100" id="feature">
                <div class="container">
                    <h2 class="text-white">Search Results</h2> 
                    <span @Html.ValidationSummary(false, "", new { @class = "text-white" })></span>
                </div>
            </section>
        </div>
    </div>
</section>

<!-- About Generic Start -->
<div class="main-wrapper">
    <!-- Start service Area -->
    <section class="service-area pt-100" id="feature">
        <div class="container">    
            <label>Customers Matching Search Values</label>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Customer ID</th>
                            <th scope="col">National ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Street Address</th>
                            <th scope="col">City</th>
                            <th scope="col">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.SearchResultCustomers)
                        {
                        <tr>
                            <th scope="row">@customer.CustomerId</th>
                            <td>@customer.NationalId</td>
                            <td>@customer.CustomerName</td>
                            <td>@customer.CustomerAddress</td>
                            <td>@customer.CustomerCity</td>
                            <td><a asp-controller="Customer" asp-action="ShowSelectedCustomer" asp-route-id="@customer.CustomerId">Customer View</a></td>
                        </tr>                        
                        }
                        <tr>
                            <td><h3>@Model.ErrorMessage</h3></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
<!-- End service Area -->