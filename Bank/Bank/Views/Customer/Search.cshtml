
@model SearchViewModel

<!-- Start banner Area -->
<section class="generic-banner relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="generic-banner-content">

                    <h2 class="text-white">Search</h2>
                    <span @Html.ValidationSummary(false, "", new { @class = "text-danger" })></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="convert-area" id="convert">
    <div class="container">
        <div class="convert-wrap">
            <div class="row justify-content-center align-items-center flex-column pb-30">
                <h1 class="text-white">Search</h1>
                <p class="text-white">Search for a customer by Name and/or City</p>
            </div>
            <div class="row justify-content-center align-items-start">                
                <form asp-action="Search" asp-controller="Customer" method="post">
                    <div class="col-lg-12 cols">
                        <input type="text" placeholder="Customer name" class="form-control mb-20" asp-for="@Model.CustomerNameSearch">
                        <span style="color:red" asp-validation-for="@Model.CustomerNameSearch"></span>
                        <input type="text" placeholder="City" class="form-control mb-20" asp-for="@Model.CustomerCitySearch">
                        <span style="color:red" asp-validation-for="@Model.CustomerCitySearch"></span>
                        @*<a href="#" class="primary-btn header-btn text-uppercase mb-20">Search by Name/City</a>*@
                        <button type="submit" asp-controller="Customer" asp-action="Search" class="primary-btn header-btn text-uppercase mb-30">Search by Name/City</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
