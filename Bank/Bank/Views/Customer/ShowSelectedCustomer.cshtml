<!-- About Generic Start -->
<div class="main-wrapper">
    <!-- Start service Area -->
    <section class="service-area pt-100" id="feature">
        <div class="container">

            <h3>Accounts</h3>

            <div class="row">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Frequency</th>
                            <th scope="col">Created</th>
                            <th scope="col">Account Balance</th>
                            <th scope="col">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.CustomerAccounts)
                        {
                            <tr>
                                <th scope="row">@account.AccountId</th>
                                <td>@account.Frequency</td>
                                <td>@account.Created.ToShortDateString()</td>
                                <td>@account.Balance SEK</td>
                                <td><a asp-action="ShowAccount" asp-controller="Account" asp-route-id="@account.AccountId">Account View</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
<!-- End service Area -->

