@model ShowCustomerDetailsViewModel

<section class="generic-banner relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="generic-banner-content">
                    <!-- Start service Area -->

                    <div class="row justify-content-center align-items-center flex-column pb-30">
                        <h1 class="text-white">Customer Details</h1>
                        <span> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Customer ID</label>
                                <p class="text-white">@Model.CustomerId</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Name</label>
                                <p class="text-white">@Model.Givenname @Model.Surname</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>               
                </div>
            </div>            
        </div>
    </div>
</section>

<!-- Start service Area -->
@*<section class="simple-services-area section-gap" id="feature">*@
    <section class="simple-services-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="single-service flex-center">
                        <h4><span class="lnr lnr-star"></span>Customer ID</h4>
                        <p>
                            @Model.CustomerId
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-user"></span>Name</h4>
                        <p>
                            @Model.Givenname @Model.Surname
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-user"></span>Gender</h4>
                        <p>
                            @Model.Gender
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-calendar-full"></span>Birthday</h4>
                        <p>
                            @Model.Birthday.Value.ToShortDateString()
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-license"></span>National Id</h4>
                        <p>
                            @Model.NationalId
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-home"></span>Address</h4>
                        <p>
                            @Model.Streetaddress
                        </p>
                        <p>
                            @Model.Zipcode @Model.City
                        </p>
                        <p>
                            @Model.Country
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-phone"></span>Telephone number</h4>
                        <p>
                            +@Model.Telephonecountrycode @Model.Telephonenumber
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-laptop"></span>E-mail</h4>
                        <p>
                            @Model.Emailaddress
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-service">
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-service">
                        <h4><span class="lnr lnr-pie-chart"></span>Total Balance - All Accounts</h4>
                        <p>
                            @Model.TotalAmountOnAccounts.ToString("### ### ##0.00") BTC
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-service">
                    </div>
                </div>
            </div>
        </div>
        <section class="service-area pt-100" id="feature">
            <div class="container">

                <h3>Accounts</h3>

                <div class="row">

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Frequency</th>
                                <th scope="col">Created</th>
                                <th scope="col">Account Balance</th>
                                <th scope="col">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model.CustomerAccounts)
                            {
                                <tr>
                                    <th scope="row">@account.AccountId</th>
                                    <td>@account.Frequency</td>
                                    <td>@account.Created.ToShortDateString()</td>
                                    <td>@account.Balance.ToString("### ### ##0.00")</td>
                                    <td><a asp-action="ShowAccount" asp-controller="Account" asp-route-id="@account.AccountId">Account View</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </section>
    </section>
    <!-- End service Area -->
