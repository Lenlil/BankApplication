@model ShowCustomerDetailsViewModel

<section class="generic-banner relative">
    <div class="container">      
        <div class="main-wrapper">
            <!-- Start service Area -->
            <section class="service-area pt-100" id="feature">
                <div class="container">
                    <h2 class="text-white">Customer Details</h2>
                    <span> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Customer ID</label>
                                <p class="text-white">@Model.CustomerId</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Name</label>
                                <p class="text-white">@Model.Givenname @Model.Surname</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Gender</label>
                                <p class="text-white">@Model.Gender</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Address</label>
                                <p class="text-white">@Model.Streetaddress</p>
                                <p class="text-white">@Model.Zipcode @Model.City</p>
                                <p class="text-white">@Model.Country</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Birthday</label>
                                <p class="text-white">@Model.Birthday.Value.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">National ID</label>
                                <p class="text-white">@Model.NationalId</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Telephone number</label>
                                <p class="text-white">+@Model.Telephonecountrycode @Model.Telephonenumber</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">E-mail</label>
                                <p class="text-white">@Model.Emailaddress</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="single-service">
                                <label class="text-white font-weight-bold">Total Balance - All Accounts</label>
                                <p class="text-white">@Model.TotalAmountOnAccounts.ToString("### ### ##0.00") SEK</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<!-- About Generic Start -->
<div class="main-wrapper">
    <!-- Start service Area -->
    <section class="service-area pt-100" id="feature">
        <div class="container">

            <h3>Accounts</h3>

            <div class="row">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Frequency</th>
                            <th scope="col">Created</th>
                            <th scope="col">Account Balance</th>
                            <th scope="col">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.CustomerAccounts)
                        {
                            <tr>
                                <th scope="row">@account.AccountId</th>
                                <td>@account.Frequency</td>
                                <td>@account.Created.ToShortDateString()</td>
                                <td>@account.Balance.ToString("### ### ##0.00")</td>
                                <td><a asp-action="ShowAccount" asp-controller="Account" asp-route-id="@account.AccountId">Account View</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
<!-- End service Area -->

