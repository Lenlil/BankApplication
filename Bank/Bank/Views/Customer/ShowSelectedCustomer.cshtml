@model ShowCustomerDetailsViewModel

<section class="generic-banner relative">
    <div class="container">      
        <div class="main-wrapper">
            <!-- Start service Area -->
            <section class="service-area pt-100" id="feature">
                <div class="container">
                    <h2 class="text-white">Customer Details</h2>
                    <span> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Customer ID</label>
                                <p class="text-white">@Model.CustomerId</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Name</label>
                                <p class="text-white">@Model.Givenname @Model.Surname</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Gender</label>
                                <p class="text-white">@Model.Gender</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Address</label>
                                <p class="text-white">@Model.Streetaddress</p>
                                <p class="text-white">@Model.Zipcode @Model.City</p>
                                <p class="text-white">@Model.Country</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Birthday</label>
                                <p class="text-white">@Model.Birthday.Value.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>National ID</label>
                                <p class="text-white">@Model.NationalId</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Telephone number</label>
                                <p class="text-white">+@Model.Telephonecountrycode @Model.Telephonenumber</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="single-service">
                                <label>Email</label>
                                <p class="text-white">@Model.Emailaddress</p>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="single-service">
                                <label>Total Balance - All Accounts</label>
                                <p class="text-white">@Model.TotalAmountOnAccounts SEK</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>


